{
  "environments": {
    "review": {
      "addons": [
        {
          "plan": "heroku-postgresql:standard-0",
          "as": "DATABASE",
          "options": {
            "version": "12"
          }
        }
      ],
      "buildpacks": [
        {
          "url": "https://github.com/whisthq/subdir-heroku-buildpack.git"
        },
        {
          "url": "heroku/python"
        }
      ],
      "env": {
        "PROJECT_PATH": {
          "description": "Path of the webserver project relative to monorepo root.",
          "value": "webserver"
        }
      }
    },
    "test": {
      "addons": [
        {
          "plan": "heroku-postgresql:standard-0",
          "as": "POSTGRES_EPHEMERAL_DB",
          "options": {
            "version": "12"
          }
        }
      ],
      "scripts": {
        "test": "cd tests && bash run_tests.sh"
      },
      "env": {
        "INSTANCE_PROFILE_DEV": "arn:aws:iam::747391415460:instance-profile/EC2DeploymentRoleInstanceProfiledev"
      }
    }
  }
}
