{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2018",
        "moduleResolution": "node",
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "components/*": ["./components/*"],
            "types/*": ["./types/*"],
            "constants/*": ["./constants/*"],
            "http/*": ["./http/*"],
            "utilities/*": ["./utilities/*"]
        }
    }
}
