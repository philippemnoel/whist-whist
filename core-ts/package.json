{
  "name": "@fractal/core-ts",
  "version": "1.0.0",
  "description": "Internal Library for all Fractal React components, Typescript functions, CSS modules, etc.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*"
  ],
  "license": "UNLICENSED",
  "repository": "https://github.com/fractal/fractal",
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.13.13",
    "@tsconfig/recommended": "^1.0.1",
    "@types/browser-or-node": "^1.3.0",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.170",
    "@types/node": "^16.4.3",
    "@types/node-fetch": "^2.5.10",
    "@types/nodemon": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "fetch-mock": "^9.11.0",
    "install": "^0.13.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "browser-or-node": "^1.3.0",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1"
  },
  "scripts": {
    "compile": "tsc",
    "clean": "rimraf dist",
    "copy-package": "mkdir -p dist && cp package.json dist/package.json",
    "build": "yarn run clean && yarn run compile",
    "config:build": "docker build -t fractal/config ../config",
    "config:run": "docker run fractal/config --os auto --deploy dev",
    "config:parse": "yarn -s config:build &> /dev/null && yarn -s config:run",
    "dev": "CONFIG=$(yarn config:parse) nodemon -r tsconfig-paths/register --watch src",
    "lint:check": "eslint src/** --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --fix src/** --no-error-on-unmatched-pattern",
    "tsc:watch": "CONFIG=$(yarn config:parse) yarn run clean && yarn run compile -- --watch",
    "test": "CONFIG=$(yarn config:parse) yarn run compile && jest",
    "test:watch": "CONFIG=$(yarn config:parse) jest --watch",
    "test:ci": "yarn run compile && jest"
  }
}
