{
  "buildpacks": [
    {
      "url": "https://github.com/fractal/subdir-heroku-buildpack.git"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "OAUTHLIB_RELAX_TOKEN_SCOPE": {
      "description": "Don't raise an exception if the granted and requested OAuth scopes differ.",
      "value": "1"
    },
    "PROJECT_PATH": {
      "description": "The path to the directory containing the Heroku app itself.",
      "value": "main-webserver"
    }
  },
  "environments": {
    "review": {
      "addons": ["heroku-redis:hobby-dev"]
    },
    "test": {
      "addons": ["heroku-redis:in-dyno"],
      "scripts": {
        "test": "pytest -v -s --no-mock-aws"
      }
    }
  }
}
