# Starts the display configured for Whist, runs as root
[Unit]
Description=Whist Display
After=whist-startup.service
Requires=whist-startup.service

[Service]
User=root
Type=forking
EnvironmentFile=/usr/share/fractal/fractal-display-config.env
ExecStart=/usr/share/fractal/fractal-display.sh
StandardOutput=file:/var/log/fractal/display-out.log
StandardError=file:/var/log/fractal/display-err.log
PIDFile=/usr/share/fractal/xinit-pid

[Install]
WantedBy=multi-user.target
