# Activates PulseAudio with correct settings for Whist, runs as root
[Unit]
Description=Whist Audio
After=whist-display.service network.target
Requires=whist-display.service

[Service]
User=root
Type=exec
Environment=DISPLAY=:10
Environment=XAUTHORITY=/home/whist/.Xauthority
ExecStart=/usr/share/fractal/run-pulseaudio.sh
StandardOutput=file:/var/log/fractal/audio-out.log
StandardError=file:/var/log/fractal/audio-err.log

[Install]
WantedBy=multi-user.target
