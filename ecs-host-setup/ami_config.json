{
    "builders": [
        {
            "secret_key": "NA",
            "access_key": "NA",
            "region": "us-east-1",
            "instance_type": "g3.4xlarge",
            "ami_name": "NA",
            "source_ami": "NA",
            "type": "amazon-ebs",
            "ssh_username": "ubuntu",
            "launch_block_device_mappings": [
                {
                  "volume_type": "gp2",
                  "device_name": "/dev/sda1",
                  "delete_on_termination": true,
                  "volume_size": 32
                }
            ],
            "ebs_optimized": true,
            "security_group_ids": [
                "sg-0678c7029eb05c2fe",
                "sg-0addb36a8bbb37831"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline": [
                "sudo apt-get remove unattended-upgrades -y",
                "sudo reboot"
            ]
        },
        {
            "type": "file",
            "source": "../ecs-host-setup",
            "destination": "/home/ubuntu"
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu/ecs-host-setup",
                "sudo su ubuntu",
                "./setup_ubuntu20_host.sh"
            ]
        },
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline": [
                "sudo reboot"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu/ecs-host-setup",
                "./setup_ubuntu20_ami_host.sh"]
        }
    ]
}
