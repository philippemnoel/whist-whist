{
    "builders": [
        {
            "access_key": "PLACEHOLDER",
            "secret_key": "PLACEHOLDER",
            "name": "Fractal AWS AMI Builder",
            "type": "amazon-ebs",
            "region": "us-east-1",
            "source_ami": "PLACEHOLDER",
            "instance_type": "g3.4xlarge",
            "ssh_username": "ubuntu",
            "ami_name": "PLACEHOLDER",
            "ami_description": "Fractal-optimized Ubuntu 20.04 AWS Machine Image.",
            "launch_block_device_mappings": [
                {
                  "volume_type": "gp2",
                  "device_name": "/dev/sda1",
                  "delete_on_termination": true,
                  "volume_size": 32
                }
            ],
            "ebs_optimized": true,
            "associate_public_ip_address": true,
            "subnet_id": "subnet-3341731d",
            "vpc_id": "vpc-34aded4e"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline": [
                "apt-get remove unattended-upgrades -y",
                "apt-get autoremove -y",
                "apt-get clean",
                "apt-get rm -rf /var/lib/apt/lists/*",
                "sudo reboot"
            ]
        },
        {
            "type": "file",
            "source": "../ecs-host-setup",
            "destination": "/home/ubuntu"
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu/ecs-host-setup",
                "./setup_ubuntu20_host.sh"
            ]
        },
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline": [
                "sudo reboot"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu/ecs-host-setup",
                "./setup_ubuntu20_ami_host.sh"
            ]
        }
    ],
    "post-processors": [
        {
          "type": "manifest",
          "output": "manifest.json",
          "strip_path": true
        }
    ]
}
