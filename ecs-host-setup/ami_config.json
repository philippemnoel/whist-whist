{
  "variables": {
    "github_pat": "",
    "github_username": "",
    "git_branch": "",
    "git_hash": "",
    "access_key": "",
    "secret_key": "",
    "source_region": "",
    "source_ami": "",
    "destination_regions": "",
    "instance_type": "",
    "ami-name": "",
    "subnet_id": "",
    "vpc_id": ""
  },
  "sensitive-variables": ["access_key", "secret_key", "github_username", "github_pat"],
  "builders": [
    {
      "name": "Fractal AWS AMI Builder",
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "{{user `source_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ami_regions": "{{user `destination_regions`}}",
      "instance_type": "{{user `instance_type`}}",
      "ami_name": "{{user `ami_name`}}",
      "ami_description": "Fractal-optimized Ubuntu 20.04 AWS Machine Image.",
      "iam_instance_profile": "PackerAMIBuilder",
      "ssh_username": "ubuntu",
      "launch_block_device_mappings": [
        {
          "volume_type": "gp2",
          "device_name": "/dev/sda1",
          "delete_on_termination": true,
          "volume_size": 32
        }
      ],
      "ebs_optimized": true,
      "subnet_id": "{{user `subnet_id`}}",
      "vpc_id": "{{user `vpc_id`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },
    {
      "type": "shell",
      "expect_disconnect": "true",
      "inline": ["sudo apt-get remove unattended-upgrades -y", "sudo reboot"]
    },
    {
      "pause_before": "10s",
      "type": "file",
      "source": "../ecs-host-setup",
      "destination": "/home/ubuntu"
    },
    {
      "type": "file",
      "source": "../ecs-host-service/build/ecs-host-service",
      "destination": "/home/ubuntu/ecs-host-service"
    },
    {
      "type": "shell",
      "inline": ["cd /home/ubuntu/ecs-host-setup", "export GH_USERNAME={{user `github_pat`}}; export GH_PAT={{user `github_pat`}}; export GIT_BRANCH={{user `git_branch`}}; export GIT_HASH={{user `git_hash`}}; ./setup_ubuntu20_host.sh"]
    },
    {
      "type": "shell",
      "expect_disconnect": "true",
      "inline": ["sudo reboot"]
    },
    {
      "pause_before": "10s",
      "type": "shell",
      "inline": [
        "cd /home/ubuntu/ecs-host-setup",
        "./setup_ubuntu20_ami_host.sh",
        "cd ..",
        "rm -rf ecs-host-setup"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
