{
  "variables": {
    "github_pat": "",
    "github_username": "",
    "git_branch": "",
    "git_hash": "",
    "access_key": "",
    "secret_key": "",
    "source_region": "",
    "source_ami": "",
    "destination_regions": "",
    "instance_type": "",
    "ami-name": "",
    "subnet_id": "",
    "vpc_id": ""
  },
  "sensitive-variables": ["access_key", "secret_key", "github_username", "github_pat"],
  "builders": [
    {
      "name": "Fractal AWS AMI Builder",
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "{{user `source_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ami_regions": "{{user `destination_regions`}}",
      "instance_type": "{{user `instance_type`}}",
      "ami_name": "{{user `ami_name`}}",
      "ami_description": "Fractal-optimized Ubuntu 20.04 AWS Machine Image.",
      "iam_instance_profile": "PackerAMIBuilder",
      "ssh_username": "ubuntu",
      "launch_block_device_mappings": [
        {
          "volume_type": "gp2",
          "device_name": "/dev/sda1",
          "delete_on_termination": true,
          "volume_size": 32
        }
      ],
      "ebs_optimized": true,
      "subnet_id": "{{user `subnet_id`}}",
      "vpc_id": "{{user `vpc_id`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo {{user `github_pat`}}; echo {{user `github_username`}}; echo {{user `git_hash`}}; echo {{user `git_branch`}}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "./testin_script.sh {{user `github_pat`}} {{user `github_username`}} {{user `git_hash`}} {{user `git_branch`}}"
      ]
    }
  ]
}
