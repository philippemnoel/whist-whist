{
  "include": [
    "src",
    "../config",
    "scripts",
    "electron-builder.config.js",
    "postcss.config.js",
    "snowpack.config.js",
    "tailwind.config.js",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/*"
      ]
    },
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  }
}
